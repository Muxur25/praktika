<div class='row'>
	<div class='col-md-6 offset-3'>
		<div class='card mb-5 mt-5'>
			<div class='card-body'>
				<div class='list-group mb-1'>
					<p class='card-text'>Sotilgan tovarlar soni: {{sotilgan}}</p>
					<p class='card-text'>Sotilmagan tovarlar soni: {{bekor}}</p>
					<p class='card-text'>Jami summa: {{totalAmount}}</p>
				</div>
			</div>
		</div>
		{{#if data}}
			{{#each data}}
				<div class='card mb-5 mt-5'>
					<div class='card-body'>
						<div class='list-group mb-1'>
							<p class='card-text'>Buyurtmachi N: {{buyurtma.id}}</p>
							<p class='card-text'>FIO: {{buyurtma.fio}}</p>
							<p class='card-text'>Region: {{buyurtma.region}}</p>
							<p class='card-text'>Phone Number: {{buyurtma.phone}}</p>
							<p class='card-text'>Status:
								<span style='color: red;'>{{buyurtma.status}}</span></p>
							<p class='card-text'>Buyurtma vaqti: {{buyurtma.createdAt}}</p>
						</div>
						<br />
						<h5>Quyidagi mahsulotga buyurtma berildi: </h5>
						<p class='card-text'>Mahsulot nomi: {{title}}</p>
						<p class='card-text'>Narxi: {{amount}}</p>
					</div>
					{{#if image}}
						<img src='{{image}}' class='card-img-bottom' alt='...' />
					{{/if}}

					<div class='card-footer d-flex'>

						<form action='/product/sotildi/{{buyurtma.id}}' method='post'>

							<button type='submit' class='btn btn-success mx-1'>Sotish</button>
						</form>
						<form action='/product/bekor/{{buyurtma.id}}' method='post'>

							<button type='submit' class='btn btn-danger mx-1'>Bekor qilish</button>
						</form>
					</div>
				</div>
			{{/each}}
		{{else}}
			<h1>Buyurtmalar mavjud emas</h1>
		{{/if}}

	</div>
</div>