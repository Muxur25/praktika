<div class='container'>
	<div class='row'>
		<div class='col-md-6 offset-3'>
			<div class='card mb-5 mt-5'>
				<div class='card-body'>
					<div class='list-group mb-1'>
						<a href='#' class='list-group-item list-group-item-action'>
							<img
								src='https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg'
								class='rounded-circle float-start'
								style='height: 30px;'
								alt='...'
							/>
							<h5 class='card-title'>{{product.user.firstName}}</h5>
						</a>
					</div>
					<p class='card-text'>Nomi: {{product.title}}</p>
					<p class='card-text'>Tavsifi: {{product.description}}</p>
					<p class='card-text'>Narxi: {{product.amount}}</p>
					<p class='card-text'><small
							class='text-muted'
						>{{product.createdAt}}</small></p>
				</div>
				{{#if product.image}}
					<img src='{{product.image}}' class='card-img-bottom' alt='...' />
				{{/if}}

			</div>
		</div>
	</div>

	<div class='row'>
		<div class='col-md-8 offset-2'>
			{{#if comment}}
				{{#each comment}}
					<div class='card mb-3'>
						<div class='row g-0'>
							<div class='col-md-4'>
								<img
									src='https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg'
									class='img-fluid rounded-start'
									alt='...'
									style='width: 180px;'
								/>
							</div>
							<div class='col-md-8'>
								<div class='card-body'>
									<h5 class='card-title'>{{email}}</h5>
									<p class='card-text'>{{text}}</p>
									<p class='card-text'><small
											class='text-body-secondary'
										>{{createdAt}}</small></p>
									<form action='/product/comment/delete/{{id}}' method='post'>

										<button
											type='submit'
											class='btn btn-danger mx-1'
										>O'chirish</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				{{/each}}
			{{/if}}
		</div>
	</div>
</div>